@page
@using Domain.Models
@using Domain.VmModels
@model Pizza.Pages.PizzaSettingsModel
@{
}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="my-4">@Model.PizzaType.Name</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h2 class="my-4">Suurus</h2>
            <form method="post">
                <div class="row">
                    <div class="col-auto">
                        <button class="btn @Model.getClass("S")" asp-page-handler="DropSm">Small</button>
                        <input type="hidden" name="small" value="Small" />
                    </div>
                    <div class="col-auto">
                        <button class="btn @Model.getClass("M")" asp-page-handler="DropMm">Medium</button>
                        <input type="hidden" name="medium" value="Medium" />
                    </div>
                    <div class="col-auto">
                        <button class="btn @Model.getClass("B")" asp-page-handler="DropBg">Big</button>
                        <input type="hidden" name="big" value="Big" />
                        <input type="hidden" name="orderid" value="@Model.orderID" />
                    </div>
                </div>
                
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <h2 class="my-4">Sisaldab</h2>
            <div class="list-group">
                @foreach (AddedLisaVM addedLisa in Model.AddedLisas)
                {
                    <a href="#" class="list-group-item">@(addedLisa.Count + " x " + addedLisa.Lisa?.Name)</a>
                }
            </div>
        </div>
        <div class="col-lg-6">
            <h2 class="my-4">Lisandid</h2>
            <div class="row">
                @foreach (Lisa lisa in Model.Lisas)
                {
                    <form method="post">
                        <div class="col-auto m-2">
                            <button class="btn btn-outline-success" asp-page-handler="Submit">@lisa.Name</button>
                            <input type="hidden" name="id" value="@lisa.Id" />
                            <input type="hidden" name="orderid" value="@Model.orderID" />
                        </div>
                    </form>
                }
                </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-lg-12">
            @if (Model.orderID != 0)
            {
                <button type="button" class="btn btn-outline-success" onclick="window.location='/PizzaKokku?pOrderId=' + @Model.pizzaOrder.Id + '&orderId=' + @Model.orderID">Next</button>
            }
            else
            {
                <button type="button" class="btn btn-outline-success" onclick="window.location='/PizzaKokku?pOrderId=' + @Model.pizzaOrder.Id">Next</button>
            }

        </div>
    </div>
